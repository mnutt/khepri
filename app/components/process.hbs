<header>
  <h1>{{@model.name}}</h1>

  <div class="actions">
    <button type="button" class="blank-button action" {{on "click" this.clear}}>
      <span class="icon icon-erase"></span> Clear
    </button>

    <button type="button" class="blank-button action" {{on "click" this.toggleFollow}}>
      <span class="icon icon-cd {{if this.follow "active"}}"></span> Follow
    </button>
  </div>
</header>

<div class="log-tail-container">
  <LogTail @follow={{this.follow}} @terminal={{this.terminal}} @model={{@model}} />
</div>
